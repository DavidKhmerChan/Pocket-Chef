<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ingredients"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="davidchan.pocketchef.Ingredients">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="1st Ingredient"
        android:ems="10"
        android:id="@+id/ingredient1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="2nd Ingredient"
        android:ems="10"
        android:id="@+id/ingredient2"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/ingredient1"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="3rd ingredient"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/ingredient3"
        android:layout_below="@+id/ingredient2"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ingredient1"
        android:layout_alignBottom="@+id/ingredient1"
        android:entries="@array/measurement_array"
        android:prompt="@string/measurement_prompt" />

    <Spinner
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignTop="@+id/ingredient2"
        android:layout_toStartOf="@+id/ingredient2"
        android:layout_above="@+id/ingredient3"
        android:entries="@array/measurement_array"
        android:prompt="@string/measurement_prompt" />

    <Spinner
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:entries="@array/measurement_array"
        android:prompt="@string/measurement_prompt"
        android:layout_alignTop="@+id/ingredient3"
        android:layout_toStartOf="@+id/ingredient3"
        android:layout_alignBottom="@+id/ingredient3" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_alignBaseline="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignBaseline="@+id/spinner2"
        android:layout_alignBottom="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignTop="@+id/spinner3"
        android:layout_alignParentStart="true" />


</RelativeLayout>
